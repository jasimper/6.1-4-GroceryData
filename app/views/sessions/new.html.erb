<h1>Please sign in.</h1>
<div>
<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
</div>
<div>
<%= form_tag '/login' do %>

  <%= label_tag :email %><%= email_field_tag :email %>
  <%= label_tag :password %><%= password_field_tag :password %>

  <%= submit_tag 'Log In' %>
<% end %>
</div>
